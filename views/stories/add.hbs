<h2 class="text-center mb-3">Add Story</h2>
<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card">
			<div class="card-body">
				<form method="post" action="/stories">
					<div class="form-group">
						<label for="title"><strong>Story Title</strong></label>
						<input type="text" name="title" class="form-control">
					</div>
					<div class="form-group">
						<label for="status"><strong>Status</strong></label>
						<select class="custom-select">
							<option selected value="public">Public</option>
							<option value="private">Private</option>
							<option value="unpublished">Unpublished</option>
						</select>
					</div>
					<div class="form-group">
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" name="allow" id="allow" checked="checked">
							<label class="custom-control-label" for="allow">Allow Comments</label>
						</div>
					</div>
					<div class="form-group">
						<label for="story"><strong>Tell us your story:</strong></label>
						<textarea class="form-control" name="story" rows="4"></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>
	</div>
</div>