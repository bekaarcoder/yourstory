<div class="row mt-5">
	<div class="col-md-9">
		<div class="card text-center">
			<div class="card-body">
				<h3 class="card-title mb-3">{{story.title}}</h3>
				<h5 class="card-subtitle lead text-muted mb-3">{{formatDate story.date 'dddd, MMMM Do YYYY'}}</h5>
				<div class="card-text">
					{{{story.body}}}
				</div>
			</div>
		</div>
		{{#if story.allowComments}}
		<div class="card mt-5">
			<div class="card-body">
				<h3 class="card-title lead"><strong>Comments</strong></h3>
				{{#if user}}
				<form method="post" action="/stories/comment/{{story.id}}">
					<div class="form-row">
						<div class="col-10">
							<textarea name="comment" class="form-control mr-2" rows="1" placeholder="Post a comment here..."></textarea>
						</div>
						<div class="col-2">
							<button type="submit" class="btn btn-primary">Post</button>
						</div>
					</div>
				</form>
				{{else}}
				<p>You are not logged in. <a href="/auth/google">Login</a> to post comment.</p>
				{{/if}}
			</div>
		</div>
		{{/if}}
	</div>
	<div class="col-md-3">
		<div class="card text-center">
			<div class="card-body">
				<h3 class="card-title mb-2">{{story.user.displayName}}</h3>
				<div>
					<img src="{{story.user.profileImg}}" class="img-fluid rounded-circle">
				</div>
				<a href="/stories/user/{{story.user.id}}" class="btn btn-outline-success mt-3">More from {{story.user.firstName}}</a>
			</div>
		</div>
	</div>
</div>